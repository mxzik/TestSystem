<Window x:Class="TestSystemProject.FormsForAdmin.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSystemProject.FormsForAdmin"
        mc:Ignorable="d"
        Title="Index" Height="350" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="LightPink" Margin="10" Opacity="0.8">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="btnTheme" Content="Темы" Height="35" Width="250" FontSize="20" Margin="10" Click="BtnTheme_Click"/>
            <Button x:Name="btnTest" Content="Тесты" Height="35" Width="250" FontSize="20" Margin="10" Click="BtnTest_Click"/>
            <Button x:Name="btnQuestion" Content="Вопросы" Height="35" Width="250" FontSize="20" Margin="10" Click="BtnQuestion_Click"/>
            <Button x:Name="btnAnswer" Content="Ответы" Height="35" Width="250" FontSize="20" Margin="10" Click="BtnAnswer_Click"/>
            <Button x:Name="btnBack" Content="Назад" Height="35" Width="250" FontSize="20" Margin="10" Click="BtnBack_Click"/>
            
        </StackPanel>
    </Grid>
</Window>