<Window x:Class="TestSystemProject.FormsForUser.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSystemProject.FormsForUser"
        mc:Ignorable="d"
        Title="Results" Height="450" Width="800"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Black">
            <TextBlock HorizontalAlignment="Left" FontSize="30" Foreground="White" FontFamily="Comic Sans MS" Text="Результаты" VerticalAlignment="Center" Margin="30 0 0 0 "/>
            <Button x:Name="btnBack" Content="Назад" Width="100" HorizontalAlignment="Right" Margin="0 0 10 0" Click="BtnBack_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.RowSpan="2" >
            <DataGrid x:Name="dgResults" FontSize="16" FontWeight="Bold">
                <DataGrid.Background>
                    <ImageBrush ImageSource="/TestSystemProject;component/Images/image.JPG"  Opacity="0.2"/>
                </DataGrid.Background>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
